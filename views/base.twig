{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		{{ function('wp_body_open') }}
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
<header class="header">
    {% block header %}
    <div class="w-full">
    <div class="py-4 border-b border-black flex justify-between items-center px-6">
        <!-- Logo and crafted with section -->
        <div class="flex gap-2 items-center">
            <a href="/" class="no-underline font-light text-6xl font-micah">micah<span class="font-bold">shu</span></a>

        </div>

        <!-- Navigation Menu -->
        <nav class="flex items-center gap-8 font-micah text-lg underline">
            <a href="/" class="hover:text-gray-600 transition-colors">home</a>
            <a href="/about" class="hover:text-gray-600 transition-colors">about me</a>
            <a href="/projects" class="hover:text-gray-600 transition-colors">projects</a>
            <a href="/services" class="hover:text-gray-600 transition-colors">services</a>
            <a href="/blog" class="hover:text-gray-600 transition-colors">blog</a>
        </nav>

        <!-- Connect Button -->
        <div>
            <a href="/contact" class="bg-black text-white py-2 px-4 font-micah rounded-full text-lg underline">connect</a>
        </div>
    </div>
</div>
    {% endblock %}
</header>

		<section id="content" role="main" class="content-wrapper">
			{% if title %}<h1 class="mt-4">{{title}}</h1>{% endif %}
			<div class="wrapper">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			<footer id="footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
